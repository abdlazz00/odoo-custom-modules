<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_library" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.library</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//block[@name='users_setting_container']" position="after">
                <block title="Library Management" name="library_setting_container">
                    <setting id="library_fine_setting" string="Daily Fine" help="Tentukan nominal denda per hari untuk buku yang terlambat.">
                        <field name="daily_fine_amount"/>
                    </setting>
                </block>
            </xpath>

        </field>
    </record>
</odoo>
